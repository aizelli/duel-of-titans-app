{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "src/*": [
        "src/*"
      ]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "extends": "expo/tsconfig.base"
}